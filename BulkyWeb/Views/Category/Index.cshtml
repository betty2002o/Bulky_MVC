@model List<Category>
<div class="container">
    <div class="row pt-4">
        <div class="col-12"> <h2 class="text-primary">Category List</h2></div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3"> 
            <div class="text-end">
                <a asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Category
                </a>
            </div>
        </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
                    <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var c in Model.OrderBy(x => x.DisplayOrder))
        {
        <tr>
            <td>@c.Name</td>
            <td>@c.DisplayOrder</td>
            <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Upsert" asp-route-id="@c.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
        </tr>
        }

    </tbody>
</table>
    </div>

</div>
